<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>
      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= form.label "Nombre del producto", style: "display: block" %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label "Descripción", style: "display: block" %>
    <%= form.text_area :description %>
  </div>
  <div>
    <%= form.label "Categoría", style: "display: block" %>
    <%= form.collection_check_boxes(:category_ids, Category.all, :id, :name) do |b| %>
      <%= b.label class:"label-checkbox" do%>
        <%= b.check_box + b.text %>
      <%end%>
    <% end %>
  </div>
  <div>
    <%= form.label "Stock", style: "display: block" %>
    <%= form.number_field :stock %>
  </div>
  <div>
    <%= form.label "Precio", style: "display: block" %>
    <%= form.text_field :price %>
  </div>
  <div>
    <%= form.label "SKU", style: "display: block" %>
    <%= form.text_field :sku %>
  </div>
  <div>
    <%= form.submit "Guardar" %>
  </div>
<% end %>
